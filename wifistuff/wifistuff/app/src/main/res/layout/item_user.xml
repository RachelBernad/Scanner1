<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/text_view_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:text="nickname"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_nickname"
        android:layout_alignBottom="@+id/text_view_nickname"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/text_view_nickname"
        android:text="password"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_password"
        android:layout_alignBottom="@+id/text_view_password"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/text_view_password"
        android:text="first name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_last_name"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_nickname"
        android:layout_marginTop="26dp"
        android:text="last name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_last_name"
        android:layout_alignBottom="@+id/text_view_last_name"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/text_view_last_name"
        android:text="phone"
        android:textSize="20sp" />


</RelativeLayout>