<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.natal.wifi.ListAllWifiesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="All Wifies"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="Does wifi named :"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:hint="insert wifie's name"
            android:textSize="17dp"
            android:id="@+id/edit_text_wifi_name"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="Exist?"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:text="Search"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/search_button"
        android:onClick="Search_wifi_by_name"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="finish__list_all_wifies_activity"
        android:text="back"
        android:textAllCaps="false"
        android:textSize="20dp">
    </Button>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/list_view_all_wifies"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>
