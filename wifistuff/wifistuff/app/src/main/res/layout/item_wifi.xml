<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="15dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_view_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:text="wifi name" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/text_view_wifi_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_wifi_name"
        android:layout_alignBottom="@+id/text_view_wifi_name"
        android:layout_centerHorizontal="true"
        android:text="wifi pass" />

    <TextView
        android:id="@+id/text_view_wifi_pwtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_alignBaseline="@+id/text_view_wifi_pass"
        android:layout_alignBottom="@+id/text_view_wifi_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:text="wifi pwtype" />

    <TextView
        android:id="@+id/text_view_bssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_view_wifi_pass"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_toStartOf="@+id/text_view_wifi_pass"
        android:text="bssid" />

    <TextView
        android:id="@+id/text_view_Mongo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_bssid"
        android:layout_alignBottom="@+id/text_view_bssid"
        android:layout_toEndOf="@+id/text_view_bssid"
        android:text="Mongo id" />


</RelativeLayout>